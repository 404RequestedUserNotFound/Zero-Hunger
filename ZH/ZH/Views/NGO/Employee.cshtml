@model ZH.Models.ZHEF.FoodTable
@{
    ViewBag.Title = "Employee";
}

@Styles.Render("~/Content/Edit.css")
@Styles.Render("~/Content/List.css")

@using (Html.BeginForm("Employee", "NGO"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Assign Employee For Collection</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.AssignedEmp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AssignedEmp, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
            <br />
                <div>
                    <a href="/NGO/CollectRequest" class="btn btn-warning">Back to Request List</a>
                </div>
        </div>
    </div>
}