    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <br />
            <br />

            <div>
                <a href="/Employee/EmployeeDetails" class="btn btn-warning">Back to Employee List</a>
            </div>
        </div>
    </div>

</div>
